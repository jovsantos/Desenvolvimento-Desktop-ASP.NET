@page "/veiculos/create"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Novo Ve√≠culo</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form @onsubmit="CreateVeiculo">
        <div class="mb-3">
            <label for="placa" class="form-label">Placa</label>
            <input id="placa" class="form-control" @bind="veiculo.Placa"/>
        </div>
        <div class="mb-3">
            <label for="modelo" class="form-label">Modelo</label>
            <input id="modelo" class="form-control" @bind="veiculo.Modelo"/>
        </div>
        <div class="mb-3">
            <label for="cor" class="form-label">Cor</label>
            <input id="cor" class="form-control" @bind="veiculo.Cor"/>
        </div>
        <div class="mb-3">
            <label for="motorista" class="form-label">Motorista</label>
            <input id="motorista" class="form-select" @bind="veiculo.Motorista">
                <option value="0">Selecione um motorista</option>              
        </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="/veiculos" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>

@code {
    Veiculo veiculo = new Veiculo();

    async Task CreateVeiculo()
    {
        await Http.PostAsJsonAsync("api/veiculos", veiculo);
        NavigationManager.NavigateTo("/veiculos");
    }
}
