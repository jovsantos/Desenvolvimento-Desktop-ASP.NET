@page "/motoristas/create"
@inject HttpClient Http
@using Estacionamento.MAUI.Models
@inject NavigationManager NavigationManager

<h3>Novo Motorista</h3>

<hr />

<div class="row">
    <div class="col-md-4">

        <form @onsubmit = "CreateMotorista" >

            <div class="form-group">
                <label for="nome" class="control-label">Nome</label>
                <input for="nome" class="form-control" @bind = "motorista.Nome" />
            </div>
            <div class="form-group">
                <label for="veiculo" class="control-label">Veiculo</label>
                <select for="veiculoId" class="form-control" @bind = "motorista.VeiculoId" >
                    <option>- Selecione um Veiculo -</option>
                    @if(veiculos != null)
                    {
                        @foreach (var veiculo in veiculos)
                        {
                            <option value="@veiculo.Id">@veiculo.Marca - @veiculo.Modelo</option>
                        }
                    } 
                    
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="#" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>
@code
{
    Motorista motorista = new Motorista();
    List<Veiculo>? veiculos;

    protected override async Task OnInitializedAsync() // Carrega a lista de motoristas ao inicializar o componente
    {
        veiculos = await Http.GetFromJsonAsync<List<Veiculo>>("https://localhost:4000/api/Veiculos"); // Chama a API para obter a lista de veiculos
    }
    async Task CreateMotorista()
    {
        await Http.PostAsJsonAsync("https://localhost:4000/api/Motoristas", motorista);
        NavigationManager.NavigateTo("/motoristas"); // Redireciona para a lista de veículos após a criação
    }
}


